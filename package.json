{
  "name": "taskflow-web",
  "version": "2.0.0",
  "description": "Aplicación web de gestión de tareas con integración de APIs externas",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npx serve . -p 3000",
    "full-dev": "concurrently \"npm run dev\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "serve": "^14.2.1",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "node-notifier": "^10.0.1"
  },

  "keywords": [
    "task-management",
    "productivity",
    "web-app",
    "javascript",
    "bootstrap",
    "express",
    "nodejs"
  ],
  "author": "Gustavo",
  "license": "MIT"
}
